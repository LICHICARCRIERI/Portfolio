<div class="isolate px-6 lg:px-8 flex justify-center">
    <img
        src="/qr.png"
        class="flex-1 w-1/2 p-12 sm:hidden md:flex lg:flex xl:flex object-contain"
    />
    <form
        action="mailto:lisandrocarrieri@gmail.com"
        method="POST"
        class="max-w-xl"
    >
        <div class="grid grid-cols-1 gap-x-8 gap-y-2 sm:grid-cols-2">
            <div>
                <label
                    for="Nombre"
                    class="block text-sm font-semibold leading-6 text-white"
                    >Nombre</label
                >
                <div class="mt-1">
                    <input
                        type="text"
                        name="Nombre"
                        id="Nombre"
                        autocomplete="given-name"
                        class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-yellow-200/90 sm:text-sm sm:leading-6"
                    />
                </div>
            </div>
            <div>
                <label
                    for="Apellido"
                    class="block text-sm font-semibold leading-6 text-white"
                    >Apellido</label
                >
                <div class="mt-1">
                    <input
                        type="text"
                        name="Apellido"
                        id="Apellido"
                        autocomplete="family-name"
                        class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-yellow-200/90 sm:text-sm sm:leading-6"
                    />
                </div>
            </div>
            <div class="sm:col-span-2">
                <label
                    for="Empresa"
                    class="block text-sm font-semibold leading-6 text-white"
                    >Empresa</label
                >
                <div class="mt-1">
                    <input
                        type="text"
                        name="Empresa"
                        id="Empresa"
                        autocomplete="organization"
                        class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-yellow-200/90 sm:text-sm sm:leading-6"
                    />
                </div>
            </div>
            <div class="sm:col-span-2">
                <label
                    for="email"
                    class="block text-sm font-semibold leading-6 text-white"
                    >Email</label
                >
                <div class="mt-1">
                    <input
                        type="email"
                        name="email"
                        id="email"
                        autocomplete="email"
                        class="block w-full rounded-md border-0 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-yellow-200/90 sm:text-sm sm:leading-6"
                    />
                </div>
            </div>

            <div class="sm:col-span-2">
                <label
                    for="Mensaje"
                    class="block text-sm font-semibold leading-6 text-white"
                    >Mensaje</label
                >
                <div class="mt-1">
                    <textarea
                        name="Mensaje"
                        id="Mensaje"
                        rows="4"
                        class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-yellow-200/90 sm:text-sm sm:leading-6"
                    ></textarea>
                </div>
            </div>
        </div>
        <div class="mt-6">
            <button
                type="submit"
                class="bg-white/5
                border border-white/10 rounded-full
                block w-full justify-center items-center
                py-1 px-2 md:py-2 md:px-4
                text-xs md:text-base
                transition
                hover:scale-110 hover:bg-white/10"
                >Enviar</button
            >
        </div>
    </form>
</div>
