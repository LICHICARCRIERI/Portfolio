---
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import HTML from "./icons/HTML.astro";
import JS from "./icons/JS.astro";
import REACTICON from "./icons/ReactICON.astro";
import NODE from "./icons/Node.astro";
import MONGO from "./icons/MongoDB.astro";
import REDUX from "./icons/Redux.astro";
import CSS from "./icons/Css.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-orange-900 text-white",
    icon: HTML,
  },
  NextJS: {
    name: "NextJS",
    class: "bg-black text-white",
    icon: NextJS,
  },
  JS: {
    name: "JavaScript",
    class: "bg-yellow-900 text-white",
    icon: JS,
  },
  REACTICON: {
    name: "React",
    class: "bg-sky-900 text-white",
    icon: REACTICON,
  },
  NODE: {
    name: "Node.js",
    class: "bg-green-700 text-white",
    icon: NODE,
  },
  MONGO: {
    name: "MongoDB",
    class: "bg-green-900 text-white",
    icon: MONGO,
  },
  Tailwind: {
    name: "Tailwind CSS",
    class: "bg-blue-900 text-white",
    icon: Tailwind,
  },
  REDUX: {
    name: "Redux",
    class: "bg-violet-900 text-white",
    icon: REDUX,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-900 text-white",
    icon: CSS,
  },
};
const PROJECTS = [
  {
    title: "Tienda online (En construcción)",
    description:
      "Página creada desde cero, tanto el Front-End como el Back-End, usando las tecnologías más modernas y buenas prácticas. Desarrollada para proyecto personal y para sumar experiencia en este estilo de webs.",
    link1: "#",
    link2: "#",
    image: "/projects/Baldu.jpg",
    tags: [TAGS.HTML, TAGS.JS, TAGS.REACTICON, TAGS.NODE, TAGS.MONGO],
  },
  {
    title: "To Do APP",
    description:
      "Aplicación programada desde cero, utilizando varios recursos como fecha y hora local (vista desde la PC), consumir APIS y usando Tailwind animations",
    link1: "https://todoapp-psi-ten.vercel.app/",
    link2: "https://github.com/LICHICARCRIERI/ToDOAPP",
    image: "/projects/ToDoAPP.jpg",
    tags: [TAGS.HTML, TAGS.Tailwind, TAGS.JS, TAGS.NextJS],
  },
  {
    title: "Encriptador y desencriptador",
    description:
      "Trabajo práctico realizado y entregado para el programa Oracle NEXT Education respetando todos los requerimientos estipulados",
    link1: "https://lichicarcrieri.github.io/Encriptador-Oracle-Alura/",
    link2: "https://github.com/LICHICARCRIERI/Encriptador-Oracle-Alura",
    image: "/projects/Encriptador.jpg",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JS],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags, link1, link2 }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2 mt-12">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-2 flex-row mb-2 flex-wrap">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        loading="lazy"
        class="rounded shadow-2xl shadow-white/10 aspect-video mt-4"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
      <div class="flex justify-center gap-5 mt-7 ">
        {link1 && (
          <a
            href={link1}
            class="bg-white/5
    border border-white/10 rounded-full
    inline-flex justify-center items-center
    py-1 px-2 md:py-2 md:px-4 
    text-xs md:text-base
    transition
    hover:scale-110 hover:bg-white/10
    
   
    "
          >
            Visitar{" "}
            <svg
              class="w-3 h-3 ms-2 rtl:rotate-180"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 10"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 5h12m0 0L9 1m4 4L9 9"
              />
            </svg>
          </a>
        )}
        {link2 && (
          <a
            href={link2}
            class="bg-white/5
    border border-white/10 rounded-full
    inline-flex justify-center items-center 
    py-1 px-2 md:py-2 md:px-4
    text-xs md:text-base
    transition
    hover:scale-110 hover:bg-white/10
  
    "
          >
            Ver código{" "}
            <svg
              class="w-3 h-3 ms-2 rtl:rotate-180"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 10"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 5h12m0 0L9 1m4 4L9 9"
              />
            </svg>
          </a>
        )}
      </div>
    </article>
  ))
}
